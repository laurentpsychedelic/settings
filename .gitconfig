[core]
	pager = nkf | less
	editor = emacsclient
	whitespace = trailing-space,space-before-tab
	autocrlf = input
	quotepath = off
	fileMode = false
[alias]
	ci = commit
	co = checkout
	br = branch
	rs = reset
	stat = status
	st = status
	cf = config
	lg = log
	track = "!f() { ([ $# -eq 2 ] && ( echo \"Setting tracking for branch \" $1 \" -> \" $2;git branch --set-upstream $1 $2; ) || ( git for-each-ref --format=\"local: %(refname:short) <--sync--> remote: %(upstream:short)\" refs/heads && echo --Remotes && git remote -v)); }; f"
	cancel = !git commit -a -m 'Temporary commit for cancel' && git reset --hard HEAD~
	rb = rebase
	cp = cherry-pick
	sb = submodule
	sm = submodule
	cd = checkout
	sh = show
	d = diff
[color]
	ui = true
[user]
	name = Laurent FABRE
	email = laurent_psychedelic@hotmail.com
[i18n]
	commitencoding = SHIFT_JIS
[date]
	timezone = Japan/Tokyo
[log]
	date = local
[push]
	default = upstream
[merge]
	tool = kdiff3
[branch]
	autosetuprebase = always
[branch "master"]
	rebase = true
